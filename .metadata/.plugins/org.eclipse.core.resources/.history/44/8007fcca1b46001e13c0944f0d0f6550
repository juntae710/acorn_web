<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<title>Insert title here</title>
	<script>
		function check(){
			
			//return false;
			let frm = document.frm;
			let userid = frm.userid;
			let userpw = frm.userpw;
			let username = frm.username;
			
			if (userid.value == ""){
				alert("아이디입력");
				userid.focus();
				return false;
			}else if (userpw.value == ""){
				alert("비번입력");
				userpw.focus();
				return false;
			}else if (username.value == ""){
				alert("이름입력");
				username.focus();
				return false;
			}
			return true;
			
		}
		
	</script>
	<style type="text/css">
